[Unit]
Description=Bastion - Slate
After=opsee-network.service
Requires=opsee-network.service

[Service]
Restart=always
User=core
TimeoutStartSec=0
RestartSec=5s
ExecStartPre=-/usr/bin/docker stop -t 5 %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull quay.io/opsee/slate:latest
ExecStart=/usr/bin/docker run --rm --cgroup-parent=systemd --name %p --net=opsee quay.io/opsee/slate:latest
ExecStop=/usr/bin/docker stop -t 5 %p

[Install]
WantedBy=multi-user.target
